{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="text-center">Welcome {% if app.user %} {{ app.user.pseudo }} <img style="width: 3vw" src="{{ asset('uploads/images/'~app.user.picture)}}" alt=""> {% endif %} on this place where we love video-games</h1>

    <h3 class="offset-1 col-10">Fresh News</h3>
    {% for new in news %}
        <article id="news">
            <div class="news">
            <a href="{{ path('new',{'id':new.id}) }}">
                <h4>{{ new.title }}</h4>
                {% if new.picture %}
                    <img class="img-responsive" src="{{ asset('uploads/images/'~new.picture) }}" alt="picture of the subject">
                {% endif %}
            </a>
{#            <p>{{ new.content }}</p>#}
            </div>
        </article>
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('admin-delete-actu',{'id':new.id}) }}">Delete actu</a></li>
            <li><a href="{{ path('admin-update-actu',{'id':new.id}) }}">Update actu</a></li>
        {% endif %}

    {% endfor %}
    <h3 class="offset-1 col-10">Hot Games</h3>
    {% for game in games.results %}
        <article id="games">
            <div class="games">
            <a href="{{ path('game',{'id':game.id}) }}">
                <h4>{{ game.name }}</h4>
                <img class="img-responsive" src="{{ game.background_image }}" alt="">
            </a>
